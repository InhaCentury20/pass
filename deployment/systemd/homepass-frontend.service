[Unit]
Description=HomePass Frontend Next.js Service
After=network.target

[Service]
Type=simple
User=ec2-user
WorkingDirectory=/home/ec2-user/homepass/homepass-front
Environment="PATH=/usr/bin:/bin"
Environment="NODE_ENV=production"
EnvironmentFile=-/home/ec2-user/homepass/homepass-front/.env.production
ExecStart=/usr/bin/npm start
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
