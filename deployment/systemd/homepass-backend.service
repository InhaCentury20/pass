[Unit]
Description=HomePass Backend FastAPI Service
After=network.target

[Service]
Type=simple
User=ec2-user
WorkingDirectory=/home/ec2-user/homepass/homepass-backend
Environment="PATH=/home/ec2-user/homepass/homepass-backend/venv/bin"
ExecStart=/home/ec2-user/homepass/homepass-backend/venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
